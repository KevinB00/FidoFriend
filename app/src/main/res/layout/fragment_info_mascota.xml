<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mascota.InfoMascotaFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tViewNombreMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#00BAD2"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre mascota" />

    <TextView
        android:id="@+id/tViewPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Peso"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tViewNombreMascota"
        app:layout_constraintBottom_toTopOf="@+id/tViewDiferenciaText"
        app:layout_constraintEnd_toStartOf="@+id/tViewNumeroPeso"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tViewNumeroPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="250dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tViewPeso"
        app:layout_constraintTop_toTopOf="@+id/tViewPeso"
        tools:text="20 Kg" />

    <TextView
        android:id="@+id/tViewDiferenciaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:text="Diferencia"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tViewActividad"
        app:layout_constraintEnd_toStartOf="@+id/tViewDifNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tViewPeso" />

    <TextView
        android:id="@+id/tViewDifNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tViewDiferenciaText"
        app:layout_constraintTop_toTopOf="@+id/tViewDiferenciaText" />

    <TextView
        android:id="@+id/tViewActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="43dp"
        android:text="Actividad"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tViewEstado"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tViewDiferenciaText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginEnd="180dp"
        android:src="@drawable/cara_feliz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tViewActividad"
        app:layout_constraintTop_toTopOf="@+id/tViewActividad" />

    <TextView
        android:id="@+id/tViewEstado"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:text="Estado"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tViewActividad"
        app:layout_constraintBottom_toTopOf="@+id/tViewEdad"
        app:layout_constraintEnd_toStartOf="@+id/tViewEstadoRes"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tViewEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Edad"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tViewEdadNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tViewEstado" />

    <TextView
        android:id="@+id/tViewEstadoRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="240dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tViewEstado"
        app:layout_constraintTop_toTopOf="@+id/tViewEstado"
        tools:text="Estado" />

    <TextView
        android:id="@+id/tViewEdadNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="270dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tViewEdad"
        app:layout_constraintTop_toTopOf="@+id/tViewEdad"
        tools:text="10" />

</androidx.constraintlayout.widget.ConstraintLayout>